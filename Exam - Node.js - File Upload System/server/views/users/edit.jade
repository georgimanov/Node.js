extends ../shared/layout

block main-content
    h1 Edit profile #{currentUser.username}
        a.btn.btn-lg.btn-success.pull-right(href="/profile") Back
    form(method="post")
        label(for="email") E-mail
        input(id="email" value='#{currentUser.email}' class="form-control" type="email" name="email" placeholder="E-mail")
        br

        label(for="password") Password
        input(id="password" class="form-control"  type="password" name="password" placeholder="Password")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="text" placeholder="Confirm password")
        br
        label(for="first-name") First Name
        input(id="first-name" value="#{currentUser.firstName}" class="form-control" type="text" name="firstName" placeholder="First Name")
        br
        label(for="last-name") Last Name
        input(id="last-name" class="form-control" value="#{currentUser.lastName}" type="text" name="lastName" placeholder="Last Name")
        br
        label(for="image") Profile image
        input(id="image" class="form-control" type="text" value="#{currentUser.image}" name="image" placeholder="Image url")
        br
        label(for="facebook") Facebook url
        input(id="facebook" class="form-control" value="#{currentUser.facebook || ''}" type="text" name="facebook" placeholder="Facebook url")
        br
        label(for="youTube") YouTube url
        input(id="youTube" class="form-control" type="text" value="#{currentUser.youTube || ''}" name="youTube" placeholder="YouTube url")
        br
        input(type="submit" class="btn btn-lg btn-success" value="Edit")
        a.btn.btn-lg.btn-info.pull-right(href="/profile") Cancel
